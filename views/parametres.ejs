<!-- Contenu des paramètres -->
<div class="settings-container">
    <!-- Navigation des paramètres -->
    <div class="settings-nav">
        <button class="settings-nav-btn active" data-section="profile">
            <i class="fas fa-user"></i>
            <span>Profil</span>
        </button>
        <button class="settings-nav-btn" data-section="security">
            <i class="fas fa-shield-alt"></i>
            <span>Sécurité</span>
        </button>
        <button class="settings-nav-btn" data-section="notifications">
            <i class="fas fa-bell"></i>
            <span>Notifications</span>
        </button>
        <button class="settings-nav-btn" data-section="preferences">
            <i class="fas fa-sliders-h"></i>
            <span>Préférences</span>
        </button>
        <button class="settings-nav-btn" data-section="billing">
            <i class="fas fa-credit-card"></i>
            <span>Facturation</span>
        </button>
        <button class="settings-nav-btn" data-section="integrations">
            <i class="fas fa-plug"></i>
            <span>Intégrations</span>
        </button>
    </div>

    <!-- Contenu des sections -->
    <div class="settings-content">
        <!-- Section Profil -->
        <div class="settings-section active" id="profile">
            <div class="section-header">
                <h2><i class="fas fa-user"></i> Informations du Profil</h2>
                <p>Gérez vos informations personnelles et votre profil</p>
            </div>
            
            <div class="profile-section">
                <div class="profile-photo-section">
                    <div class="profile-photo-large">
                        <img src="data:image/svg+xml;base64," alt="Photo de profil" id="profilePhoto">
                        <div class="photo-overlay">
                            <button class="btn-photo-upload" id="uploadPhotoBtn">
                                <i class="fas fa-camera"></i>
                            </button>
                        </div>
                    </div>
                    <input type="file" id="photoInput" accept="image/*" style="display: none;">
                </div>

                <form id="profileForm" class="settings-form">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="firstName">Prénom *</label>
                            <input type="text" id="firstName" name="firstName" value="Admin" required>
                        </div>
                        <div class="form-group">
                            <label for="lastName">Nom *</label>
                            <input type="text" id="lastName" name="lastName" value="BikoRent" required>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="email">Email *</label>
                        <input type="email" id="email" name="email" value="admin@bikorent.com" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="phone">Téléphone</label>
                        <input type="tel" id="phone" name="phone" value="+33 1 23 45 67 89">
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="profession">Profession</label>
                            <input type="text" id="profession" name="profession" value="Gestionnaire immobilier" placeholder="Votre profession">
                        </div>
                        <div class="form-group">
                            <label for="workplace">Lieu de travail</label>
                            <input type="text" id="workplace" name="workplace" value="BikoRent SAS" placeholder="Nom de votre entreprise">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="address">Adresse</label>
                        <textarea id="address" name="address" rows="3">123 Rue de la Paix, 75001 Paris, France</textarea>
                    </div>
                    
                    <div class="form-group">
                        <label for="bio">Bio</label>
                        <textarea id="bio" name="bio" rows="4" placeholder="Parlez-nous un peu de vous...">Gestionnaire immobilier passionné avec plus de 10 ans d'expérience dans la location et la gestion de propriétés.</textarea>
                    </div>
                    
                    <div class="form-actions">
                        <button type="submit" class="btn-primary">
                            <i class="fas fa-save"></i> Sauvegarder
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Section Sécurité -->
        <div class="settings-section" id="security">
            <div class="section-header">
                <h2><i class="fas fa-shield-alt"></i> Sécurité</h2>
                <p>Gérez la sécurité de votre compte</p>
            </div>
            
            <div class="security-section">
                <form id="passwordForm" class="settings-form">
                    <h3>Changer le mot de passe</h3>
                    <div class="form-group">
                        <label for="currentPassword">Mot de passe actuel *</label>
                        <input type="password" id="currentPassword" name="currentPassword" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="newPassword">Nouveau mot de passe *</label>
                        <input type="password" id="newPassword" name="newPassword" required>
                        <div class="password-strength" id="passwordStrength">
                            <div class="strength-bar">
                                <div class="strength-fill" id="strengthFill"></div>
                            </div>
                            <span class="strength-text" id="strengthText">Force du mot de passe</span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="confirmPassword">Confirmer le nouveau mot de passe *</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" required>
                    </div>
                    
                    <div class="form-actions">
                        <button type="submit" class="btn-primary">
                            <i class="fas fa-key"></i> Changer le mot de passe
                        </button>
                    </div>
                </form>

                <div class="security-options">
                    <h3>Options de sécurité</h3>
                    
                    <div class="security-option">
                        <div class="option-info">
                            <h4>Authentification à deux facteurs</h4>
                            <p>Ajoutez une couche de sécurité supplémentaire à votre compte</p>
                        </div>
                        <div class="option-action">
                            <label class="switch">
                                <input type="checkbox" id="twoFactorAuth" disabled>
                                <span class="slider"></span>
                            </label>
                        </div>
                    </div>
                    
                    <div class="security-option">
                        <div class="option-info">
                            <h4>Connexions suspectes</h4>
                            <p>Recevez des alertes pour les connexions depuis de nouveaux appareils</p>
                        </div>
                        <div class="option-action">
                            <label class="switch">
                                <input type="checkbox" id="suspiciousLogin" disabled>
                                <span class="slider"></span>
                            </label>
                        </div>
                    </div>
                    
                    <div class="security-option">
                        <div class="option-info">
                            <h4>Session active</h4>
                            <p>Déconnectez-vous de tous les appareils</p>
                        </div>
                        <div class="option-action">
                            <button class="btn-secondary" id="logoutAllBtn">
                                <i class="fas fa-sign-out-alt"></i> Déconnecter tout
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section Notifications -->
        <div class="settings-section" id="notifications">
            <div class="section-header">
                <h2><i class="fas fa-bell"></i> Notifications</h2>
                <p>Configurez vos préférences de notifications</p>
            </div>
            
            <div class="notifications-section">
                <div class="notification-category">
                    <h3>Notifications par email</h3>
                    
                    <div class="notification-option">
                        <div class="option-info">
                            <h4>Nouveaux paiements</h4>
                            <p>Recevez une notification quand un locataire effectue un paiement</p>
                        </div>
                        <div class="option-action">
                            <label class="switch">
                                <input type="checkbox" id="emailPayments" checked>
                                <span class="slider"></span>
                            </label>
                        </div>
                    </div>
                    
                    <div class="notification-option">
                        <div class="option-info">
                            <h4>Paiements en retard</h4>
                            <p>Alertes pour les paiements non reçus</p>
                        </div>
                        <div class="option-action">
                            <label class="switch">
                                <input type="checkbox" id="emailOverdue" disabled>
                                <span class="slider"></span>
                            </label>
                        </div>
                    </div>
                    
                    <div class="notification-option">
                        <div class="option-info">
                            <h4>Nouveaux locataires</h4>
                            <p>Notifications pour les nouvelles locations</p>
                        </div>
                        <div class="option-action">
                            <label class="switch">
                                <input type="checkbox" id="emailNewTenants" disabled>
                                <span class="slider"></span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="notification-category">
                    <h3>Notifications push</h3>
                    
                    <div class="notification-option">
                        <div class="option-info">
                            <h4>Alertes importantes</h4>
                            <p>Notifications push pour les événements critiques</p>
                        </div>
                        <div class="option-action">
                            <label class="switch">
                                <input type="checkbox" id="pushAlerts" disabled>
                                <span class="slider"></span>
                            </label>
                        </div>
                    </div>
                    
                    <div class="notification-option">
                        <div class="option-info">
                            <h4>Rappels de paiement</h4>
                            <p>Rappels pour les paiements à venir</p>
                        </div>
                        <div class="option-action">
                            <label class="switch">
                                <input type="checkbox" id="pushReminders" disabled>
                                <span class="slider"></span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="notification-category">
                    <h3>Fréquence des rapports</h3>
                    
                    <div class="form-group">
                        <label for="reportFrequency">Rapports automatiques</label>
                        <select id="reportFrequency" name="reportFrequency" disabled>
                            <option value="weekly">Hebdomadaire</option>
                            <option value="monthly" selected>Mensuel</option>
                            <option value="quarterly">Trimestriel</option>
                            <option value="never">Jamais</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section Préférences -->
        <div class="settings-section" id="preferences">
            <div class="section-header">
                <h2><i class="fas fa-sliders-h"></i> Préférences</h2>
                <p>Personnalisez votre expérience</p>
            </div>
            
            <div class="preferences-section">
                <div class="preference-category">
                    <h3>Interface</h3>
                    
                    <div class="form-group">
                        <label for="language">Langue</label>
                        <select id="language" name="language">
                            <option value="fr" selected>Français</option>
                            <option value="en">English</option>
                            <option value="es">Español</option>
                            <option value="de">Deutsch</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="timezone">Fuseau horaire</label>
                        <select id="timezone" name="timezone">
                            <option value="Europe/Paris" selected>Europe/Paris (UTC+1)</option>
                            <option value="Europe/London">Europe/London (UTC+0)</option>
                            <option value="America/New_York">America/New_York (UTC-5)</option>
                            <option value="Asia/Tokyo">Asia/Tokyo (UTC+9)</option>
                        </select>
                    </div>
                    
                    <div class="preference-option">
                        <div class="option-info">
                            <h4>Mode sombre</h4>
                            <p>Activer le thème sombre pour l'interface</p>
                        </div>
                        <div class="option-action">
                            <label class="switch">
                                <input type="checkbox" id="darkMode" disabled>
                                <span class="slider"></span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="preference-category">
                    <h3>Affichage</h3>
                    
                    <div class="form-group">
                        <label for="dateFormat">Format de date</label>
                        <select id="dateFormat" name="dateFormat">
                            <option value="DD/MM/YYYY" selected>DD/MM/YYYY</option>
                            <option value="MM/DD/YYYY">MM/DD/YYYY</option>
                            <option value="YYYY-MM-DD">YYYY-MM-DD</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="currency">Devise</label>
                        <select id="currency" name="currency">
                            <option value="EUR" selected>Euro (€)</option>
                            <option value="USD">Dollar US ($)</option>
                            <option value="GBP">Livre Sterling (£)</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section Facturation -->
        <div class="settings-section" id="billing">
            <div class="section-header">
                <h2><i class="fas fa-credit-card"></i> Facturation</h2>
                <p>Gérez votre abonnement et vos informations de paiement</p>
            </div>
            
            <div class="billing-section">
                <div class="current-plan">
                    <h3>Plan actuel</h3>
                    <div class="plan-card">
                        <div class="plan-info">
                            <h4>Plan Premium</h4>
                            <p>€29.99/mois</p>
                            <ul>
                                <li>Gestion illimitée de propriétés</li>
                                <li>Rapports avancés</li>
                                <li>Support prioritaire</li>
                                <li>Intégrations API</li>
                            </ul>
                        </div>
                        <div class="plan-actions">
                            <button class="btn-secondary">Changer de plan</button>
                            <button class="btn-danger">Annuler l'abonnement</button>
                        </div>
                    </div>
                </div>

                <div class="payment-methods">
                    <h3>Méthodes de paiement</h3>
                    <div class="payment-method">
                        <div class="method-info">
                            <i class="fab fa-cc-visa"></i>
                            <div>
                                <h4>Visa se terminant par 4242</h4>
                                <p>Expire le 12/25</p>
                            </div>
                        </div>
                        <div class="method-actions">
                            <button class="btn-secondary">Modifier</button>
                            <button class="btn-danger">Supprimer</button>
                        </div>
                    </div>
                    <button class="btn-primary">
                        <i class="fas fa-plus"></i> Ajouter une méthode de paiement
                    </button>
                </div>

                <div class="billing-history">
                    <h3>Historique de facturation</h3>
                    <div class="billing-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Description</th>
                                    <th>Montant</th>
                                    <th>Statut</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>01/03/2024</td>
                                    <td>Plan Premium - Mars 2024</td>
                                    <td>€29.99</td>
                                    <td><span class="status-paid">Payé</span></td>
                                </tr>
                                <tr>
                                    <td>01/02/2024</td>
                                    <td>Plan Premium - Février 2024</td>
                                    <td>€29.99</td>
                                    <td><span class="status-paid">Payé</span></td>
                                </tr>
                                <tr>
                                    <td>01/01/2024</td>
                                    <td>Plan Premium - Janvier 2024</td>
                                    <td>€29.99</td>
                                    <td><span class="status-paid">Payé</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section Intégrations -->
        <div class="settings-section" id="integrations">
            <div class="section-header">
                <h2><i class="fas fa-plug"></i> Intégrations</h2>
                <p>Connectez vos outils préférés</p>
            </div>
            
            <div class="integrations-section">
                <div class="integration-item">
                    <div class="integration-info">
                        <img src="https://via.placeholder.com/40x40/4285f4/ffffff?text=G" alt="Google Calendar">
                        <div>
                            <h4>Google Calendar</h4>
                            <p>Synchronisez vos événements de location</p>
                        </div>
                    </div>
                    <div class="integration-status">
                        <span class="status-connected">Connecté</span>
                        <button class="btn-secondary">Déconnecter</button>
                    </div>
                </div>

                <div class="integration-item">
                    <div class="integration-info">
                        <img src="https://via.placeholder.com/40x40/00c851/ffffff?text=W" alt="WhatsApp">
                        <div>
                            <h4>WhatsApp Business</h4>
                            <p>Envoyez des messages automatiques aux locataires</p>
                        </div>
                    </div>
                    <div class="integration-status">
                        <span class="status-disconnected">Non connecté</span>
                        <button class="btn-primary">Connecter</button>
                    </div>
                </div>

                <div class="integration-item">
                    <div class="integration-info">
                        <img src="https://via.placeholder.com/40x40/0073aa/ffffff?text=Q" alt="QuickBooks">
                        <div>
                            <h4>QuickBooks</h4>
                            <p>Synchronisez vos données comptables</p>
                        </div>
                    </div>
                    <div class="integration-status">
                        <span class="status-disconnected">Non connecté</span>
                        <button class="btn-primary">Connecter</button>
                    </div>
                </div>

                <div class="integration-item">
                    <div class="integration-info">
                        <img src="https://via.placeholder.com/40x40/ff6b35/ffffff?text=Z" alt="Zapier">
                        <div>
                            <h4>Zapier</h4>
                            <p>Automatisez vos workflows</p>
                        </div>
                    </div>
                    <div class="integration-status">
                        <span class="status-disconnected">Non connecté</span>
                        <button class="btn-primary">Connecter</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

