<!-- ID utilisateur pour JavaScript -->
<div id="currentUserId" style="display: none;"><%= currentUserId %></div>

<div class="chat-container">
    <!-- Header du chat -->
    <div class="chat-header">
        <div class="chat-header-content">
            <div class="chat-title">
                <h2><i class="fas fa-comments"></i> Chat</h2>
                <p>Communiquez avec vos locataires</p>
            </div>
            <div class="chat-actions">
                <button class="btn btn-primary" id="refreshChat">
                    <i class="fas fa-sync-alt"></i> Actualiser
                </button>
            </div>
        </div>
    </div>

    <!-- Contenu principal du chat -->
    <div class="chat-main">
        <!-- Liste des conversations (sidebar) -->
        <div class="chat-sidebar" id="chatSidebar">
            <div class="chat-sidebar-header">
                <h3>Conversations</h3>
                <div class="search-box">
                    <input type="text" id="searchConversations" placeholder="Rechercher une conversation...">
                    <i class="fas fa-search"></i>
                </div>
            </div>
            
            <div class="conversations-list" id="conversationsList">
                <% if (conversations && conversations.length > 0) { %>
                    <script>
                        console.log('üìã Conversations re√ßues dans la vue:', <%- JSON.stringify(conversations) %>);
    window.conversations = <%- JSON.stringify(conversations) %>;
    window.redirectPropertyId = '<%= redirectPropertyId || "" %>';
    window.preMessage = '<%= preMessage || "" %>';
    window.redirectPropertyInfo = <%- JSON.stringify(redirectPropertyInfo || null) %>;
                    </script>
            <% conversations.forEach(function(conversation) { %>
                <div class="conversation-item" data-property-id="<%= conversation.propertyId %>" data-sender-id="<%= conversation.senderId %>">
                    <div class="conversation-content">
                        <!-- Ligne 1: Nom de l'utilisateur avec petite ic√¥ne -->
                        <div class="conversation-line conversation-user">
                            <i class="fas fa-user-circle conversation-icon-small"></i>
                            <span class="conversation-sender-name"><%= conversation.senderName %></span>
                            <span class="conversation-time">
                                <% 
                                let displayTime;
                                if (conversation.lastMessageTime && conversation.lastMessageTime.seconds) {
                                    displayTime = new Date(conversation.lastMessageTime.seconds * 1000).toLocaleTimeString('fr-FR', { 
                                        hour: '2-digit', 
                                        minute: '2-digit' 
                                    });
                                } else {
                                    displayTime = new Date(conversation.lastMessageTime).toLocaleTimeString('fr-FR', { 
                                        hour: '2-digit', 
                                        minute: '2-digit' 
                                    });
                                }
                                %>
                                <%= displayTime %>
                            </span>
                        </div>
                        
                        <!-- Ligne 2: Nom de la propri√©t√© avec petite ic√¥ne -->
                        <div class="conversation-line conversation-property">
                            <i class="fas fa-building conversation-icon-small"></i>
                            <span class="conversation-property-name"><%= conversation.propertyName %></span>
                        </div>
                        
                        <!-- Ligne 3: Message avec ic√¥ne message -->
                        <div class="conversation-line conversation-message">
                            <i class="fas fa-comment conversation-icon-small"></i>
                            <span class="conversation-message-text"><%= conversation.lastMessage %></span>
                            <% if (conversation.unreadCount > 0) { %>
                                <span class="unread-badge"><%= conversation.unreadCount %></span>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }); %>
                <% } else { %>
                    <script>
                        console.log('‚ö†Ô∏è Aucune conversation re√ßue dans la vue');
                        window.conversations = [];
                        window.redirectPropertyId = '<%= redirectPropertyId || "" %>';
                        window.preMessage = '<%= preMessage || "" %>';
                        window.redirectPropertyInfo = <%- JSON.stringify(redirectPropertyInfo || null) %>;
                    </script>
                    <div class="no-conversations">
                        <i class="fas fa-comments"></i>
                        <p>Aucune conversation</p>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Zone de conversation -->
        <div class="chat-conversation" id="chatConversation">
            <div class="no-conversation-selected">
                <div class="no-conversation-content">
                    <i class="fas fa-comments"></i>
                    <h3>S√©lectionnez une conversation</h3>
                    <p>Choisissez une propri√©t√© pour commencer √† discuter</p>
                </div>
            </div>
        </div>
    </div>
</div>

